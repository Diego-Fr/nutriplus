<h1>Food Plannings</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Date start</th>
      <th>Date finish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_plannings.each do |food_planning| %>
      <tr>
        <td><%= food_planning.patient %></td>
        <td><%= food_planning.date_start %></td>
        <td><%= food_planning.date_finish %></td>
        <td><%= link_to 'Show', food_planning %></td>
        <td><%= link_to 'Edit', edit_food_planning_path(food_planning) %></td>
        <td><%= link_to 'Destroy', food_planning, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

